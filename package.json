{
	"name": "mcmodel-viewer",
	"displayName": "Minecraft Model Viewer",
	"description": "A viewer for Java Minecraft models",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:json",
		"onCommand:mcmodel-viewer.showInViewer",
		"onCommand:mcmodel-viewer.refresh"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mcmodel-viewer.showInViewer",
				"category": "MCModelViewer",
				"title": "Open model in viewer",
				"icon": "$(open-preview)"
			},
			{
				"command": "mcmodel-viewer.refresh",
				"category": "MCModelViewer",
				"title": "Refresh"
			},
			{
				"command": "mcmodel-viewer.addAssetsRoot",
				"category": "MCModelViewer",
				"title": "Add assets root"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == json && mcmodel-viewer.activeTextEditorIsModel",
					"command": "mcmodel-viewer.showInViewer",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Minecraft Model Viewer",
			"properties": {
				"mcmodel-viewer.assetsRoots": {
					"description": "A list of directories that contain minecraft assets",
					"type": "array",
					"default": [],
					"uniqueItems": true
				},
				"mcmodel-viewer.renderer.showBoundingBox": {
					"description": "Show bounding box",
					"type": "boolean",
					"default": true
				},
				"mcmodel-viewer.renderer.showCardinalDirectionLabels": {
					"description": "Show labels for cardinal directions",
					"type": "boolean",
					"default": true
				},
				"mcmodel-viewer.renderer.show3x3BlocksGrid": {
					"description": "Show 3x3 Blocks Grid",
					"type": "boolean",
					"default": true
				},
				"mcmodel-viewer.renderer.showVoxelGrid": {
					"description": "Show voxel grid",
					"type": "boolean",
					"default": true
				},
				"mcmodel-viewer.renderer.antiAliasing": {
					"type": "string",
					"enum": [
						"Off",
						"SSAA"
					],
					"default": "SSAA"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
		"package": "webpack --mode production --devtool hidden-source-map",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"@rollup/plugin-typescript": "^8.2.1",
		"@tsconfig/svelte": "^1.0.10",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/three": "^0.127.1",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"concurrently": "^6.0.2",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"rollup": "^2.45.2",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-svelte": "^7.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"sass": "^1.32.11",
		"svelte": "^3.37.0",
		"svelte-check": "^1.4.0",
		"svelte-preprocess": "^4.7.2",
		"ts-loader": "^8.0.14",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4",
		"vscode-test": "^1.5.0",
		"webpack": "^5.33.2",
		"webpack-cli": "^4.6.0"
	},
	"dependencies": {
		"@oran9e/three-mcmodel": "^0.0.8"
	}
}
